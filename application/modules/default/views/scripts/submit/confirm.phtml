                $('#renter').show();
                //ajax验证礼品券号是否有效

                $.ajax({
                    type: "POST", dataType: "text", async: true, url: FANDIAN_BASE_URL + "index/check-gift",
                    data: {"giftid": $(this).val()},
                    success: function (data) {
                        $('#giftmsg').html(data);
                        //$('#more').click();
                    },
                    error: function (res, msg, err) {
                        alert(msg);
                    }
                });
            }
        });
        $("#more").colorbox({
                            href: '#user_more',
