                            height: "100px",
                            onLoad: function () {
                            },
                            onComplete: function () {
                            },

                            onClosed: function () {
                            }
                        });
        $('#renter').click(function () {
            $(this).hide();
            $('#more').hide();
            $('#giftmsg').html('');
            $('#giftcard').removeAttr("disabled");
            $('#giftcard').val('').focus();
        });

        $('#morel').click(function () {
            giftNo = $('#giftcard').val();
            window.open('http://order.fandian.com/gift/GiftTicketShow.aspx?&TotalAmount=<?php echo $this->total;?>&Number=' + giftNo);
